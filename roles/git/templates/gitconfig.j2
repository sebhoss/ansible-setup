[user]
  name = {{ name }}
  email = {{ email }}
  signingkey = 0xC92E025EB94DABC0

[url "git@github:"]
    insteadOf = git@github.com:

[url "git@bitbucket:"]
    insteadOf = git@bitbucket.org:

[url "git@gitlab:"]
    insteadOf = git@gitlab.com:

[color]
    ui = true

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = green
    untracked = red

[push]
    default = simple

[commit]
    gpgsign = true

[gpg]
    program = gpg2
